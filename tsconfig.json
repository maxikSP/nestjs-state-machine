{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@tests/*": ["./tests/*"],
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "tests"]
}
